<VirtualHost *:80>
  ServerName <%= @params[:server_name] -%>

  ## Vhost docroot
  DocumentRoot <%= @params[:docroot] -%>

  ## Directories, there should at least be a declaration for <%= @params[:docroot] -%>

  <Directory <%= @params[:docroot] -%>>
    Options Indexes FollowSymLinks MultiViews
    AllowOverride None
    Require all granted
  </Directory>

  ## Logging
  ErrorLog "/var/log/httpd/<%= @params[:server_name].gsub('.', '_') -%>_error.log"
  ServerSignature Off
  CustomLog "/var/log/httpd/<%= @params[:server_name].gsub('.', '_') -%>_access.log" combined

  ## Block access statements
  # Block access to SCM directories.
  <DirectoryMatch .*\.(svn|git|bzr|hg|ht)/.*>
    Require all denied
  </DirectoryMatch>
</VirtualHost>
